{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "title" : "xorcery.yaml JSON Schema",
  "properties" : {
    "jars" : {
      "$ref" : "#/$defs/jars"
    }
  },
  "$defs" : {
    "jars" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "sourcejars" : {
          "type" : [ "array", "string" ]
        },
        "transmutejars" : {
          "type" : [ "array", "string" ]
        }
      }
    }
  }
}