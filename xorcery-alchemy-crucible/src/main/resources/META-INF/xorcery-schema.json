{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "title" : "xorcery.yaml JSON Schema",
  "properties" : {
    "crucible" : {
      "$ref" : "#/$defs/crucible"
    },
    "recipes" : {
      "$ref" : "#/$defs/transmutations"
    },
    "transmutations" : {
      "$ref" : "#/$defs/transmutations"
    }
  },
  "$defs" : {
    "crucible" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "closeWhenDone" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        }
      }
    },
    "recipes" : {
      "type" : "array"
    },
    "transmutations" : {
      "$ref" : "#/$defs/recipes",
      "type" : "array",
      "items" : {
        "type" : "object",
        "additionalProperties" : false,
        "properties" : {
          "enabled" : {
            "type" : [ "boolean", "string" ],
            "default" : true,
            "description" : "Default: true"
          },
          "name" : {
            "type" : [ "null", "string" ],
            "description" : "Default: null"
          },
          "recipe" : {
            "type" : [ "null", "string" ],
            "description" : "Default: null"
          },
          "source" : {
            "$ref" : "#/$defs/jars/properties/sourcejars/items"
          },
          "transmutes" : {
            "type" : "array",
            "items" : {
              "$ref" : "#/$defs/jars/properties/transmutejars/items"
            }
          }
        }
      }
    }
  }
}