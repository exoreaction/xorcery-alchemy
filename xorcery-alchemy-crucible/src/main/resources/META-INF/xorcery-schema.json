{
  "$schema" : "https://json-schema.org/draft/2020-12/schema",
  "type" : "object",
  "title" : "xorcery.yaml JSON Schema",
  "properties" : {
    "crucible" : {
      "$ref" : "#/$defs/crucible"
    }
  },
  "$defs" : {
    "crucible" : {
      "type" : "object",
      "additionalProperties" : false,
      "properties" : {
        "enabled" : {
          "type" : [ "boolean", "string" ],
          "default" : "{{ defaults.enabled }}",
          "description" : "Default: {{ defaults.enabled }} (true)"
        },
        "closeWhenDone" : {
          "type" : [ "boolean", "string" ],
          "default" : true,
          "description" : "Default: true"
        }
      }
    }
  }
}